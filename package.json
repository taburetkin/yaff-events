	"license": "MIT",
	"scripts": {
		"docs": "node tooling/jsdocs",
		"build": "yarn build-es5 && yarn build-esm",
		"build-es5": "rollup --config tooling/rollup.config.es5.js",
		"build-esm": "rollup --config tooling/rollup.config.esm.js",
		"test": "mocha --config ./test/.mocharc.raw.json",
		"test-w": "mocha -w --config ./test/.mocharc.raw.json",
		"test-es5": "yarn build-es5 && mocha --config ./test/.mocharc.es5.json",
		"test-esm": "yarn build-esm && mocha --config ./test/.mocharc.esm.json",
		"coverage": "nyc --nycrc-path test/nyc.config.js npm run test",
		"coveralls": "yarn coverage && nyc --nycrc-path nyc.config.js --reporter=text-lcov npm run test | coveralls"
	},
	"devDependencies": {
		"@babel/core": "^7.6.0",
		"@babel/plugin-transform-runtime": "^7.6.0",
		"@babel/preset-env": "^7.6.0",
		"@babel/register": "^7.6.0",
		"@babel/runtime": "^7.6.0",
		"@istanbuljs/nyc-config-babel": "^2.1.1",
		"babel-plugin-external-helpers": "^6.22.0",
		"babel-plugin-istanbul": "^5.2.0",
		"babel-plugin-transform-regenerator": "^6.26.0",
		"better-docs": "^1.3.3",
		"chai": "^4.2.0",
		"chai-as-promised": "^7.1.1",
		"coveralls": "^3.0.6",
		"eslint": "^6.3.0",
		"eslint-config-prettier": "^6.3.0",
		"eslint-plugin-prettier": "^3.1.1",
		"jsdoc-to-markdown": "^5.0.2",
		"mocha": "^6.2.0",
		"nyc": "^14.1.1",
		"rollup": "^1.23.0",
		"rollup-plugin-babel": "^4.3.3",
		"rollup-plugin-babel-minify": "^9.1.0",
		"rollup-plugin-commonjs": "^10.1.0",
		"rollup-plugin-node-resolve": "^5.2.0",
		"sinon": "^7.4.2",
		"sinon-chai": "^3.3.0"
	}
}
